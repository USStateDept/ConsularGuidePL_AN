<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3" >
        
        <RelativeLayout
            android:id="@+id/news_right_column_layout_news_0_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <ImageView
                android:id="@+id/news_right_column_layout_news_0_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            
            <ImageView
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:src="@drawable/news_gradient" />
            
            <ImageView
	        	android:id="@+id/news_right_column_layout_news_0_read_more_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/margin_small"
	            android:paddingRight="@dimen/margin_xlarge"
	            android:paddingBottom="@dimen/margin_xlarge"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:src="@drawable/read_more" />
            
            <com.agitive.usembassy.layouts.CustomTextView
                android:id="@+id/news_right_column_layout_news_0_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/news_right_column_layout_news_0_read_more_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:textColor="@color/news_title"
                android:ellipsize="end"
                android:maxLines="3" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_right_column_layout_tweet_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/tweet_background" >
            
            <ImageView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginLeft="@dimen/margin_xlarge"
            	android:layout_marginBottom="@dimen/margin_xlarge"
            	android:layout_marginTop="@dimen/margin_medium"
            	android:layout_alignParentBottom="true"
            	android:src="@drawable/twitter" />
            
            <ImageView
	            android:id="@+id/news_right_column_layout_tweet_read_more_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/margin_small"
	            android:paddingRight="@dimen/margin_xlarge"
	            android:paddingBottom="@dimen/margin_xlarge"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:src="@drawable/read_more" />
            
            <com.agitive.usembassy.layouts.CustomTextView
                android:id="@+id/news_right_column_layout_tweet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/news_right_column_layout_tweet_read_more_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:textColor="@color/news_title"
                android:ellipsize="end"
                android:maxLines="3" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/news_right_column_layout_news_1_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <ImageView
                android:id="@+id/news_right_column_layout_news_1_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            
            <ImageView
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:src="@drawable/news_gradient" />
            
            <ImageView
	            android:id="@+id/news_right_column_layout_news_1_read_more_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/margin_small"
	            android:paddingRight="@dimen/margin_xlarge"
	            android:paddingBottom="@dimen/margin_xlarge"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:src="@drawable/read_more" />
            
            <com.agitive.usembassy.layouts.CustomTextView
                android:id="@+id/news_right_column_layout_news_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/news_right_column_layout_news_1_read_more_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_xlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:textColor="@color/news_title"
                android:ellipsize="end"
                android:maxLines="3" />
            
        </RelativeLayout>
        
    </LinearLayout>
    

</RelativeLayout>
